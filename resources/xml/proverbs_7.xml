<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Proverbs" num="19">
		<marker class="begin-verse" mid="v20007001">
		</marker>
		<chapter num="7">
			<heading
				>
				Warning Against the Adulteress
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				<crossref let="h" cid="c20007001.1">
				</crossref>
				My son, keep my words
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="h" cid="c20007001.2">
				</crossref>
				treasure up my commandments with you;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007002">
			</marker>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				<crossref let="i" cid="c20007002.1">
				</crossref>
				keep my commandments and live;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				keep my teaching as 
				<crossref let="j" cid="c20007002.2">
				</crossref>
				the apple of your eye;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007003">
			</marker>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				<crossref let="k" cid="c20007003.1">
				</crossref>
				bind them on your fingers;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="k" cid="c20007003.2">
				</crossref>
				write them on the tablet of your heart.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				Say to wisdom, 
				<q class="begin-double" qid="" from="" to="">
				</q>
				You are my sister,
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and call insight your intimate friend,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				to keep you from 
				<crossref let="l" cid="c20007005.1">
				</crossref>
				the forbidden
				<note nid="n20007005.1">
				</note>
				 woman,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from 
				<crossref let="l" cid="c20007005.2">
				</crossref>
				the adulteress
				<note nid="n20007005.2">
				</note>
				 with her smooth words.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v20007006">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				For at 
				<crossref let="m" cid="c20007006.1">
				</crossref>
				the window of my house
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				I have looked out through my lattice,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				and I have seen among 
				<crossref let="n" cid="c20007007.1">
				</crossref>
				the simple,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				I have perceived among the youths,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				a young man 
				<crossref let="o" cid="c20007007.2">
				</crossref>
				lacking sense,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007008">
			</marker>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				passing along the street 
				<crossref let="p" cid="c20007008.1">
				</crossref>
				near her corner,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				taking the road to her house
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007009">
			</marker>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				in 
				<crossref let="q" cid="c20007009.1">
				</crossref>
				the twilight, in the evening,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				at 
				<crossref let="r" cid="c20007009.2">
				</crossref>
				the time of night and darkness.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v20007010">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				And behold, the woman meets him,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="s" cid="c20007010.1">
				</crossref>
				dressed as a prostitute, wily of heart.
				<note nid="n20007010.1">
				</note>
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				She is 
				<crossref let="t" cid="c20007011.1">
				</crossref>
				loud and 
				<crossref let="u" cid="c20007011.2">
				</crossref>
				wayward;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="v" cid="c20007011.3">
				</crossref>
				her feet do not stay at home;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007012">
			</marker>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				now in the street, now in the market,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="w" cid="c20007012.1">
				</crossref>
				at every corner she 
				<crossref let="x" cid="c20007012.2">
				</crossref>
				lies in wait.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007013">
			</marker>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				She seizes him and kisses him,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and with 
				<crossref let="y" cid="c20007013.1">
				</crossref>
				bold face she says to him,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007014">
			</marker>
			<verse num="14">
				<begin-line
					>
				</begin-line>
				<q class="begin-double" qid="" from="" to="">
				</q>
				I had to 
				<crossref let="z" cid="c20007014.1">
				</crossref>
				offer sacrifices,
				<note nid="n20007014.1">
				</note>
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and today I have 
				<crossref let="a" cid="c20007014.2">
				</crossref>
				paid my vows;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007015">
			</marker>
			<verse num="15">
				<begin-line
					>
				</begin-line>
				so now I have come out to meet you,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				to seek you eagerly, and I have found you.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007016">
			</marker>
			<verse num="16">
				<begin-line
					>
				</begin-line>
				I have spread my couch with 
				<crossref let="b" cid="c20007016.1">
				</crossref>
				coverings,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				colored linens from 
				<crossref let="c" cid="c20007016.2">
				</crossref>
				Egyptian linen;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007017">
			</marker>
			<verse num="17">
				<begin-line
					>
				</begin-line>
				I have perfumed my bed with 
				<crossref let="d" cid="c20007017.1">
				</crossref>
				myrrh,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				aloes, and 
				<crossref let="e" cid="c20007017.2">
				</crossref>
				cinnamon.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007018">
			</marker>
			<verse num="18">
				<begin-line
					>
				</begin-line>
				Come, let us take our fill of love till morning;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				let us delight ourselves with love.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007019">
			</marker>
			<verse num="19">
				<begin-line
					>
				</begin-line>
				For 
				<crossref let="f" cid="c20007019.1">
				</crossref>
				my husband is not at home;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				he has gone on a long journey;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007020">
			</marker>
			<verse num="20">
				<begin-line
					>
				</begin-line>
				he took a bag of money with him;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				at full moon he will come home.
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v20007021">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="21">
				<begin-line
					>
				</begin-line>
				With much seductive speech she persuades him;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				with 
				<crossref let="g" cid="c20007021.1">
				</crossref>
				her smooth talk she compels him.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007022">
			</marker>
			<verse num="22">
				<begin-line
					>
				</begin-line>
				All at once he follows her,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				as an ox goes to the slaughter,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				or as a stag is caught fast
				<note nid="n20007022.1">
				</note>
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007023">
			</marker>
			<verse num="23">
				<begin-line class="indent">
				</begin-line>
				till an arrow pierces its liver;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				as 
				<crossref let="h" cid="c20007023.1">
				</crossref>
				a bird rushes into a snare;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				he does not know that it will cost him his life.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v20007024">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="24">
				<begin-line
					>
				</begin-line>
				And 
				<crossref let="i" cid="c20007024.1">
				</crossref>
				now, O sons, listen to me,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and be attentive to the words of my mouth.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007025">
			</marker>
			<verse num="25">
				<begin-line
					>
				</begin-line>
				Let not your heart turn aside to her ways;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				do not stray into her paths,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007026">
			</marker>
			<verse num="26">
				<begin-line
					>
				</begin-line>
				for many a victim has she laid low,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and all her slain are 
				<crossref let="j" cid="c20007026.1">
				</crossref>
				a mighty throng.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20007027">
			</marker>
			<verse num="27">
				<begin-line
					>
				</begin-line>
				Her house is 
				<crossref let="k" cid="c20007027.1">
				</crossref>
				the way to Sheol,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				going down to the chambers of death.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
</crossway-bible>


