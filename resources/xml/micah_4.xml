<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Micah" num="32">
		<marker class="begin-verse" mid="v33004001">
		</marker>
		<chapter num="4">
			<heading
				>
				The Mountain of the 
				<span class="divine-name">
					Lord
				</span>
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				It shall come to pass 
				<crossref let="o" cid="c33004001.1">
				</crossref>
				in the latter days
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				that the mountain of the house of the 
				<span class="divine-name">
					Lord
				</span>
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				shall be established as the highest of the mountains,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and it shall be lifted up above the hills;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and peoples shall flow to it,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004002">
			</marker>
			<verse num="2">
				<begin-line class="indent">
				</begin-line>
				and many nations shall come, and say:
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<q class="begin-double" qid="" from="" to="">
				</q>
				Come, let us go up to the mountain of the 
				<span class="divine-name">
					Lord
				</span>
				,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				to the house of the God of Jacob,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				that he may teach us his ways
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and that we may walk in his paths.
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				For out of Zion shall go forth the law,
				<note nid="n33004002.1">
				</note>
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the word of the 
				<span class="divine-name">
					Lord
				</span>
				 from Jerusalem.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004003">
			</marker>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				He shall judge between many peoples,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and shall decide for strong nations far away;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and they shall 
				<crossref let="p" cid="c33004003.1">
				</crossref>
				beat their swords into plowshares,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and their spears into pruning hooks;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				nation shall not lift up sword against nation,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				neither shall they learn war anymore;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				<crossref let="q" cid="c33004004.1">
				</crossref>
				but they shall sit every man under his vine and under his fig tree,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="r" cid="c33004004.2">
				</crossref>
				and no one shall make them afraid,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="s" cid="c33004004.3">
				</crossref>
				for the mouth of the 
				<span class="divine-name">
					Lord
				</span>
				 of hosts has spoken.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				For 
				<crossref let="t" cid="c33004005.1">
				</crossref>
				all the peoples walk
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				each in the name of its god,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				but 
				<crossref let="u" cid="c33004005.2">
				</crossref>
				we will walk in the name of the 
				<span class="divine-name">
					Lord
				</span>
				 our God
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				forever and ever.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
			<marker class="begin-verse" mid="v33004006">
			</marker>
			<heading
				>
				The 
				<span class="divine-name">
					Lord
				</span>
				 Shall Rescue Zion
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				<crossref let="v" cid="c33004006.1">
				</crossref>
				In that day, declares the 
				<span class="divine-name">
					Lord
				</span>
				,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="w" cid="c33004006.2">
				</crossref>
				I will assemble the 
				<crossref let="x" cid="c33004006.3">
				</crossref>
				lame
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and gather those who have been driven away
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and those whom I have afflicted;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				and the lame I will make 
				<crossref let="y" cid="c33004007.1">
				</crossref>
				the remnant,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and those who were cast off, a strong nation;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and 
				<crossref let="z" cid="c33004007.2">
				</crossref>
				the 
				<span class="divine-name">
					Lord
				</span>
				 will reign over them 
				<crossref let="a" cid="c33004007.3">
				</crossref>
				in Mount Zion
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from this time forth and forevermore.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v33004008">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				And you, O tower of the flock,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				hill of the daughter of Zion,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				to you shall it come,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the former dominion shall come,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				kingship for the daughter of Jerusalem.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v33004009">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				Now why do you cry aloud?
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="b" cid="c33004009.1">
				</crossref>
				Is there no king in you?
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="c" cid="c33004009.2">
				</crossref>
				Has your counselor perished,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				that 
				<crossref let="d" cid="c33004009.3">
				</crossref>
				pain seized you like a woman in labor?
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004010">
			</marker>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				<crossref let="e" cid="c33004010.1">
				</crossref>
				Writhe and groan,
				<note nid="n33004010.1">
				</note>
				 O daughter of Zion,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				like a woman in labor,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				for 
				<crossref let="f" cid="c33004010.2">
				</crossref>
				now you shall go out from the city
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and dwell in the open country;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				you 
				<crossref let="g" cid="c33004010.3">
				</crossref>
				shall go to Babylon.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				There you shall be rescued;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="h" cid="c33004010.4">
				</crossref>
				there the 
				<span class="divine-name">
					Lord
				</span>
				 will redeem you
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from the hand of your enemies.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v33004011">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				Now 
				<crossref let="i" cid="c33004011.1">
				</crossref>
				many nations
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				are assembled against you,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				saying, 
				<q class="begin-double" qid="" from="" to="">
				</q>
				Let her be defiled,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="j" cid="c33004011.2">
				</crossref>
				let our eyes gaze upon Zion.
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004012">
			</marker>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				But 
				<crossref let="k" cid="c33004012.1">
				</crossref>
				they do not know
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the thoughts of the 
				<span class="divine-name">
					Lord
				</span>
				;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				they do not understand his plan,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				that 
				<crossref let="l" cid="c33004012.2">
				</crossref>
				he has gathered them as sheaves to the threshing floor.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v33004013">
			</marker>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				Arise and thresh,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				O daughter of Zion,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				for I will make your horn iron,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and I will make your hoofs bronze;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				you shall beat in pieces many peoples;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="m" cid="c33004013.1">
				</crossref>
				shall devote
				<note nid="n33004013.1">
				</note>
				<crossref let="n" cid="c33004013.2">
				</crossref>
				their gain to the 
				<span class="divine-name">
					Lord
				</span>
				,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				their wealth to 
				<crossref let="o" cid="c33004013.3">
				</crossref>
				the Lord of the whole earth.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
