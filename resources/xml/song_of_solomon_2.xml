<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Song of Solomon" num="21">
		<marker class="begin-verse" mid="v22002001">
		</marker>
		<chapter num="2">
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				I am a rose
				<note nid="n22002001.1">
				</note>
				 of Sharon,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="k" cid="c22002001.1">
				</crossref>
				a lily of the valleys.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v22002002">
			</marker>
			<subheading class="speaker">
				He
			</subheading>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				As a lily among brambles,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				so is 
				<crossref let="l" cid="c22002002.1">
				</crossref>
				my love among the young women.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v22002003">
			</marker>
			<subheading class="speaker">
				She
			</subheading>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				As an apple tree among the trees of the forest,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				so is my 
				<crossref let="m" cid="c22002003.1">
				</crossref>
				beloved among the young men.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				With great delight I sat 
				<crossref let="n" cid="c22002003.2">
				</crossref>
				in his shadow,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and his 
				<crossref let="o" cid="c22002003.3">
				</crossref>
				fruit was sweet to my taste.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				He 
				<crossref let="p" cid="c22002004.1">
				</crossref>
				brought me to the banqueting house,
				<note nid="n22002004.1">
				</note>
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and his 
				<crossref let="q" cid="c22002004.2">
				</crossref>
				banner over me was love.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				Sustain me with 
				<crossref let="r" cid="c22002005.1">
				</crossref>
				raisins;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				refresh me with apples,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="s" cid="c22002005.2">
				</crossref>
				for I am sick with love.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002006">
			</marker>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				His 
				<crossref let="t" cid="c22002006.1">
				</crossref>
				left hand is under my head,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and his right hand 
				<crossref let="u" cid="c22002006.2">
				</crossref>
				embraces me!
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				I 
				<crossref let="v" cid="c22002007.1">
				</crossref>
				adjure you,
				<note nid="n22002007.1">
				</note>
				 O 
				<crossref let="w" cid="c22002007.2">
				</crossref>
				daughters of Jerusalem,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				by 
				<crossref let="x" cid="c22002007.3">
				</crossref>
				the gazelles or the does of the field,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				that you not stir up or awaken love
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				until it pleases.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
			<marker class="begin-verse" mid="v22002008">
			</marker>
			<heading
				>
				The Bride Adores Her Beloved
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				The voice of my beloved!
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				Behold, he comes,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				leaping 
				<crossref let="y" cid="c22002008.1">
				</crossref>
				over the mountains,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				bounding over the hills.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002009">
			</marker>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				My beloved is like 
				<crossref let="z" cid="c22002009.1">
				</crossref>
				a gazelle
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				or a young stag.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				Behold, there he stands
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				behind our wall,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				gazing through the windows,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				looking through the lattice.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002010">
			</marker>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				My beloved speaks and says to me:
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="a" cid="c22002010.1">
				</crossref>
				<q class="begin-double" qid="" from="" to="">
				</q>
				Arise, my love, my beautiful one,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and come away,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				for behold, the winter is past;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="b" cid="c22002011.1">
				</crossref>
				the rain is over and gone.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002012">
			</marker>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				<crossref let="c" cid="c22002012.1">
				</crossref>
				The flowers appear on the earth,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the time of singing
				<note nid="n22002012.1">
				</note>
				 has come,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and the voice of 
				<crossref let="d" cid="c22002012.2">
				</crossref>
				the turtledove
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				is heard in our land.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002013">
			</marker>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				<crossref let="e" cid="c22002013.1">
				</crossref>
				The fig tree ripens its figs,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="f" cid="c22002013.2">
				</crossref>
				the vines are in blossom;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				they give forth fragrance.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="g" cid="c22002013.3">
				</crossref>
				Arise, my love, my beautiful one,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and come away.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002014">
			</marker>
			<verse num="14">
				<begin-line
					>
				</begin-line>
				O my 
				<crossref let="h" cid="c22002014.1">
				</crossref>
				dove, in the 
				<crossref let="i" cid="c22002014.2">
				</crossref>
				clefts of the rock,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				in the crannies of the cliff,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				let me see your face,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				let me 
				<crossref let="j" cid="c22002014.3">
				</crossref>
				hear your voice,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				for your voice is sweet,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and your face is 
				<crossref let="k" cid="c22002014.4">
				</crossref>
				lovely.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002015">
			</marker>
			<verse num="15">
				<begin-line
					>
				</begin-line>
				Catch 
				<crossref let="l" cid="c22002015.1">
				</crossref>
				the foxes
				<note nid="n22002015.1">
				</note>
				 for us,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the little foxes
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				that spoil the vineyards,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="f" cid="c22002015.2">
				</crossref>
				for our vineyards are in blossom.
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v22002016">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="16">
				<begin-line
					>
				</begin-line>
				<crossref let="m" cid="c22002016.1">
				</crossref>
				My beloved is mine, and I am his;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				he 
				<crossref let="n" cid="c22002016.2">
				</crossref>
				grazes
				<note nid="n22002016.1">
				</note>
				 among the lilies.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v22002017">
			</marker>
			<verse num="17">
				<begin-line
					>
				</begin-line>
				Until 
				<crossref let="o" cid="c22002017.1">
				</crossref>
				the day breathes
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="p" cid="c22002017.2">
				</crossref>
				the shadows flee,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				turn, my beloved, be like 
				<crossref let="q" cid="c22002017.3">
				</crossref>
				a gazelle
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				or a young stag on cleft mountains.
				<note nid="n22002017.1">
				</note>
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
