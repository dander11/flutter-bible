<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Zechariah" num="37">
		<marker class="begin-verse" mid="v38010001">
		</marker>
		<chapter num="10">
			<heading
				>
				The Restoration for Judah and Israel
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				Ask rain 
				<crossref let="b" cid="c38010001.1">
				</crossref>
				from the 
				<span class="divine-name">
					Lord
				</span>
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				in the season of 
				<crossref let="c" cid="c38010001.2">
				</crossref>
				the spring rain,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				from the 
				<span class="divine-name">
					Lord
				</span>
				<crossref let="d" cid="c38010001.3">
				</crossref>
				who makes the storm clouds,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="e" cid="c38010001.4">
				</crossref>
				he will give them showers of rain,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				to everyone the vegetation in the field.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010002">
			</marker>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				For 
				<crossref let="f" cid="c38010002.1">
				</crossref>
				the household gods 
				<crossref let="g" cid="c38010002.2">
				</crossref>
				utter nonsense,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the diviners see lies;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="h" cid="c38010002.3">
				</crossref>
				they tell false dreams
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and give empty consolation.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				Therefore 
				<crossref let="i" cid="c38010002.4">
				</crossref>
				the people wander like sheep;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				they are afflicted for lack of a shepherd.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v38010003">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				<crossref let="j" cid="c38010003.1">
				</crossref>
				<q class="begin-double" qid="" from="" to="">
				</q>
				My anger is hot against the shepherds,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="k" cid="c38010003.2">
				</crossref>
				I will punish the leaders;
				<note nid="n38010003.1">
				</note>
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				for 
				<crossref let="l" cid="c38010003.3">
				</crossref>
				the 
				<span class="divine-name">
					Lord
				</span>
				 of hosts cares for his flock, the house of Judah,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and will make them like his majestic steed in battle.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				From him shall come 
				<crossref let="m" cid="c38010004.1">
				</crossref>
				the cornerstone,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from him 
				<crossref let="n" cid="c38010004.2">
				</crossref>
				the tent peg,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				from him the battle bow,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from him every rulerù
				<crossref let="o" cid="c38010004.3">
				</crossref>
				all of them together.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				They shall be like mighty men in battle,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="p" cid="c38010005.1">
				</crossref>
				trampling the foe in the mud of the streets;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				they shall fight because the 
				<span class="divine-name">
					Lord
				</span>
				 is with them,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and they shall put to shame 
				<crossref let="q" cid="c38010005.2">
				</crossref>
				the riders on horses.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v38010006">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				<crossref let="r" cid="c38010006.1">
				</crossref>
				<q class="continue-double" qid="" from="" to="">
				</q>
				I will strengthen the house of Judah,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="s" cid="c38010006.2">
				</crossref>
				I will save the house of Joseph.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="t" cid="c38010006.3">
				</crossref>
				I will bring them back 
				<crossref let="u" cid="c38010006.4">
				</crossref>
				because I have compassion on them,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and they shall be as though I had not rejected them,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				for 
				<crossref let="v" cid="c38010006.5">
				</crossref>
				I am the 
				<span class="divine-name">
					Lord
				</span>
				 their God and I will answer them.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				Then Ephraim shall become like a mighty warrior,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="w" cid="c38010007.1">
				</crossref>
				their hearts shall be glad as with wine.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				Their children shall see it and be glad;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				their hearts shall rejoice in the 
				<span class="divine-name">
					Lord
				</span>
				.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v38010008">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				<crossref let="x" cid="c38010008.1">
				</crossref>
				<q class="continue-double" qid="" from="" to="">
				</q>
				I will whistle for them and 
				<crossref let="y" cid="c38010008.2">
				</crossref>
				gather them in,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				for I have redeemed them,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="z" cid="c38010008.3">
				</crossref>
				they shall be as many as they were before.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010009">
			</marker>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				<crossref let="a" cid="c38010009.1">
				</crossref>
				Though I scattered them among the nations,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				yet in far countries 
				<crossref let="b" cid="c38010009.2">
				</crossref>
				they shall remember me,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and with their children they shall live and return.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010010">
			</marker>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				<crossref let="c" cid="c38010010.1">
				</crossref>
				I will bring them home from the land of Egypt,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and gather them from Assyria,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and 
				<crossref let="d" cid="c38010010.2">
				</crossref>
				I will bring them to the land of Gilead and to Lebanon,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="e" cid="c38010010.3">
				</crossref>
				till there is no room for them.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				<crossref let="f" cid="c38010011.1">
				</crossref>
				He shall pass through the sea of troubles
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and strike down the waves of the sea,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="g" cid="c38010011.2">
				</crossref>
				and all the depths of the Nile shall be dried up.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				The pride of Assyria shall be laid low,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="h" cid="c38010011.3">
				</crossref>
				the scepter of Egypt shall depart.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v38010012">
			</marker>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				<crossref let="i" cid="c38010012.1">
				</crossref>
				I will make them strong in the 
				<span class="divine-name">
					Lord
				</span>
				,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="j" cid="c38010012.2">
				</crossref>
				they shall walk in his name,
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line class="br">
				</end-line>
				<begin-line class="declares">
				</begin-line>
				declares the 
				<span class="divine-name">
					Lord
				</span>
				.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
</crossway-bible>


