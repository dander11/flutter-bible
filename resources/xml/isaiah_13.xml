<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Isaiah" num="22">
		<marker class="begin-verse" mid="v23013001">
		</marker>
		<chapter num="13">
			<heading
				>
				The Judgment of Babylon
			</heading>
			<begin-paragraph
				>
			</begin-paragraph>
			<verse num="1">
				The oracle concerning 
				<crossref let="f" cid="c23013001.1">
				</crossref>
				Babylon which 
				<crossref let="g" cid="c23013001.2">
				</crossref>
				Isaiah the son of Amoz saw.
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23013002">
			</marker>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				On a bare hill 
				<crossref let="h" cid="c23013002.1">
				</crossref>
				raise a signal;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				cry aloud to them;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				wave the hand for 
				<crossref let="i" cid="c23013002.2">
				</crossref>
				them to enter
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the gates of the nobles.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013003">
			</marker>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				I myself have commanded my consecrated ones,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and have summoned my mighty men to execute my anger,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				my proudly exulting ones.
				<note nid="n23013003.1">
				</note>
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23013004">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				The sound 
				<crossref let="j" cid="c23013004.1">
				</crossref>
				of a tumult is on the mountains
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				as of a great multitude!
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				The sound of an uproar of kingdoms,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				of nations gathering together!
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="k" cid="c23013004.2">
				</crossref>
				The 
				<span class="divine-name">
					Lord
				</span>
				 of hosts is mustering
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				a host for battle.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				<crossref let="l" cid="c23013005.1">
				</crossref>
				They come from a distant land,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from the end of the heavens,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				the 
				<span class="divine-name">
					Lord
				</span>
				 and the weapons of his indignation,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				to destroy the whole land.
				<note nid="n23013005.1">
				</note>
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23013006">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				<crossref let="m" cid="c23013006.1">
				</crossref>
				Wail, for 
				<crossref let="n" cid="c23013006.2">
				</crossref>
				the day of the 
				<span class="divine-name">
					Lord
				</span>
				 is near;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				as destruction from the Almighty
				<note nid="n23013006.1">
				</note>
				 it will come!
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				Therefore all hands will be feeble,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and every human heart 
				<crossref let="o" cid="c23013007.1">
				</crossref>
				will melt.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013008">
			</marker>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				They will be dismayed:
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="p" cid="c23013008.1">
				</crossref>
				pangs and agony will seize them;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="q" cid="c23013008.2">
				</crossref>
				they will be in anguish like a woman in labor.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				They will look aghast at one another;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				their faces will be aflame.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23013009">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				Behold, 
				<crossref let="n" cid="c23013009.1">
				</crossref>
				the day of the 
				<span class="divine-name">
					Lord
				</span>
				 comes,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				cruel, with wrath and fierce anger,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				to make the land a desolation
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="r" cid="c23013009.2">
				</crossref>
				to destroy its sinners from it.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013010">
			</marker>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				<crossref let="s" cid="c23013010.1">
				</crossref>
				For the stars of the heavens and their constellations
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				will not give their light;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="t" cid="c23013010.2">
				</crossref>
				the sun will be dark at its rising,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the moon will not shed its light.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				I will punish 
				<crossref let="u" cid="c23013011.1">
				</crossref>
				the world for its evil,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the wicked for their iniquity;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				I will 
				<crossref let="v" cid="c23013011.2">
				</crossref>
				put an end to the pomp of the arrogant,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="w" cid="c23013011.3">
				</crossref>
				and lay low the pompous pride of the ruthless.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013012">
			</marker>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				I will make 
				<crossref let="x" cid="c23013012.1">
				</crossref>
				people more rare than fine gold,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and mankind than the 
				<crossref let="y" cid="c23013012.2">
				</crossref>
				gold of Ophir.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013013">
			</marker>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				Therefore 
				<crossref let="z" cid="c23013013.1">
				</crossref>
				I will make the heavens tremble,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the earth will be shaken out of its place,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				at the wrath of the 
				<span class="divine-name">
					Lord
				</span>
				 of hosts
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				in the day of his fierce anger.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013014">
			</marker>
			<verse num="14">
				<begin-line
					>
				</begin-line>
				And like a hunted gazelle,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				or like sheep with none to gather them,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="a" cid="c23013014.1">
				</crossref>
				each will turn to his own people,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and each will flee to his own land.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013015">
			</marker>
			<verse num="15">
				<begin-line
					>
				</begin-line>
				Whoever is found will be thrust through,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and whoever is caught will fall by the sword.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013016">
			</marker>
			<verse num="16">
				<begin-line
					>
				</begin-line>
				<crossref let="b" cid="c23013016.1">
				</crossref>
				Their infants will be dashed in pieces
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				before their eyes;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				their houses will be plundered
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and their wives ravished.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23013017">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="17">
				<begin-line
					>
				</begin-line>
				Behold, 
				<crossref let="c" cid="c23013017.1">
				</crossref>
				I am stirring up the Medes against them,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				who have no regard for silver
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and do not delight in gold.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013018">
			</marker>
			<verse num="18">
				<begin-line
					>
				</begin-line>
				<crossref let="d" cid="c23013018.1">
				</crossref>
				Their bows will slaughter
				<note nid="n23013018.1">
				</note>
				 the young men;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				they will have no mercy on the fruit of the womb;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				their eyes will not pity children.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013019">
			</marker>
			<verse num="19">
				<begin-line
					>
				</begin-line>
				And Babylon, 
				<crossref let="e" cid="c23013019.1">
				</crossref>
				the glory of kingdoms,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the splendor and pomp of the Chaldeans,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				will be 
				<crossref let="f" cid="c23013019.2">
				</crossref>
				like Sodom and Gomorrah
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				when God overthrew them.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013020">
			</marker>
			<verse num="20">
				<begin-line
					>
				</begin-line>
				<crossref let="g" cid="c23013020.1">
				</crossref>
				It will never be inhabited
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				or lived in for all generations;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				no 
				<crossref let="h" cid="c23013020.2">
				</crossref>
				Arab will pitch his tent there;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				no 
				<crossref let="i" cid="c23013020.3">
				</crossref>
				shepherds will make their flocks lie down there.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013021">
			</marker>
			<verse num="21">
				<begin-line
					>
				</begin-line>
				But 
				<crossref let="j" cid="c23013021.1">
				</crossref>
				wild animals will lie down there,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and their houses will be full of howling creatures;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				there 
				<crossref let="k" cid="c23013021.2">
				</crossref>
				ostriches
				<note nid="n23013021.1">
				</note>
				 will dwell,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and there wild goats will dance.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23013022">
			</marker>
			<verse num="22">
				<begin-line
					>
				</begin-line>
				Hyenas
				<note nid="n23013022.1">
				</note>
				 will cry in its towers,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="l" cid="c23013022.1">
				</crossref>
				jackals in 
				<crossref let="m" cid="c23013022.2">
				</crossref>
				the pleasant palaces;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				its time is close at hand
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and its days will not be prolonged.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
