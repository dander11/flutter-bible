				<span class="divine-name">
					Lord
				</span>
				, 
				<crossref let="k" cid="c19130005.2">
				</crossref>
				my soul waits,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="l" cid="c19130005.3">
				</crossref>
				in his word I hope;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19130006">
			</marker>
			<verse num="6">
				<begin-line
					>
				</begin-line>
