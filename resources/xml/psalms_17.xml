<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Psalms" num="18">
		<marker class="begin-verse" mid="v19017001">
		</marker>
		<chapter num="17">
			<heading
				>
				In the Shadow of Your Wings
			</heading>
			<subheading class="psalm-title">
				A 
				<crossref let="f" cid="c19017001.1">
				</crossref>
				Prayer of David.
			</subheading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				Hear a just cause, O 
				<span class="divine-name">
					Lord
				</span>
				; 
				<crossref let="g" cid="c19017001.2">
				</crossref>
				attend to my cry!
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				Give ear to my prayer from lips free of deceit!
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017002">
			</marker>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				From your presence 
				<crossref let="h" cid="c19017002.1">
				</crossref>
				let my vindication come!
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				Let your eyes behold the right!
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v19017003">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				You have 
				<crossref let="i" cid="c19017003.1">
				</crossref>
				tried my heart, you have 
				<crossref let="j" cid="c19017003.2">
				</crossref>
				visited me by 
				<crossref let="k" cid="c19017003.3">
				</crossref>
				night,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				you have 
				<crossref let="l" cid="c19017003.4">
				</crossref>
				tested me, and you will find nothing;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				I have purposed that my mouth will not transgress.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				With regard to the works of man, by the word of your lips
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				I have avoided the ways of the violent.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				My steps have 
				<crossref let="m" cid="c19017005.1">
				</crossref>
				held fast to your paths;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				my feet have not slipped.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v19017006">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				I 
				<crossref let="n" cid="c19017006.1">
				</crossref>
				call upon you, for you will answer me, O God;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="o" cid="c19017006.2">
				</crossref>
				incline your ear to me; hear my words.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				<crossref let="p" cid="c19017007.1">
				</crossref>
				Wondrously show
				<note nid="n19017007.1">
				</note>
				 your steadfast love,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				O Savior of those who seek refuge
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from 
				<crossref let="q" cid="c19017007.2">
				</crossref>
				their adversaries at your right hand.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v19017008">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				Keep me as 
				<crossref let="r" cid="c19017008.1">
				</crossref>
				the apple of your eye;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				hide me in 
				<crossref let="s" cid="c19017008.2">
				</crossref>
				the shadow of your wings,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017009">
			</marker>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				from the wicked who do me violence,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				my deadly enemies who 
				<crossref let="t" cid="c19017009.1">
				</crossref>
				surround me.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v19017010">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				<crossref let="u" cid="c19017010.1">
				</crossref>
				They close their hearts to pity;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				with their mouths they 
				<crossref let="v" cid="c19017010.2">
				</crossref>
				speak arrogantly.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				They have now surrounded our 
				<crossref let="w" cid="c19017011.1">
				</crossref>
				steps;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				they set their eyes to 
				<crossref let="x" cid="c19017011.2">
				</crossref>
				cast us to the ground.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017012">
			</marker>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				He is like a lion eager to tear,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				as a young lion 
				<crossref let="y" cid="c19017012.1">
				</crossref>
				lurking in ambush.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v19017013">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				Arise, O 
				<span class="divine-name">
					Lord
				</span>
				! Confront him, subdue him!
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				Deliver my soul from the wicked by your sword,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19017014">
			</marker>
			<verse num="14">
				<begin-line
					>
				</begin-line>
				from men by your hand, O 
				<span class="divine-name">
					Lord
				</span>
				,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from 
				<crossref let="z" cid="c19017014.1">
				</crossref>
				men of the world whose 
				<crossref let="a" cid="c19017014.2">
				</crossref>
				portion is in this life.
				<note nid="n19017014.1">
				</note>
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				You fill their womb with treasure;
				<note nid="n19017014.2">
				</note>
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				they are satisfied with 
				<crossref let="b" cid="c19017014.3">
				</crossref>
				children,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and they leave their abundance to their infants.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v19017015">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="15">
				<begin-line
					>
				</begin-line>
				As for me, I shall 
				<crossref let="c" cid="c19017015.1">
				</crossref>
				behold your face in righteousness;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				when I 
				<crossref let="d" cid="c19017015.2">
				</crossref>
				awake, I shall be 
				<crossref let="e" cid="c19017015.3">
				</crossref>
				satisfied with your likeness.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
</crossway-bible>


