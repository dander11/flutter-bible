			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				<crossref let="e" cid="c23047001.1">
				</crossref>
				Come down and sit in the dust,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				O virgin 
				<crossref let="f" cid="c23047001.2">
				</crossref>
				daughter of Babylon;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="g" cid="c23047001.3">
				</crossref>
				sit on the ground without a throne,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				O daughter of 
				<crossref let="h" cid="c23047001.4">
				</crossref>
				the Chaldeans!
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="i" cid="c23047001.5">
				</crossref>
