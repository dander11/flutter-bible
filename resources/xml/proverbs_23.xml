				<crossref let="j" cid="c20023027.3">
				</crossref>
				well.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v20023028">
			</marker>
			<verse num="28">
				<begin-line
					>
				</begin-line>
				<crossref let="k" cid="c20023028.1">
				</crossref>
				She lies in wait like a robber
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
