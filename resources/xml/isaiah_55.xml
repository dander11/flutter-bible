<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Isaiah" num="22">
		<marker class="begin-verse" mid="v23055001">
		</marker>
		<chapter num="55">
			<heading
				>
				The Compassion of the 
				<span class="divine-name">
					Lord
				</span>
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				<crossref let="d" cid="c23055001.1">
				</crossref>
				<q class="begin-double" qid="" from="" to="">
				</q>
				Come, everyone who thirsts,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				come to the waters;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and he who has no money,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="e" cid="c23055001.2">
				</crossref>
				come, buy and eat!
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				Come, buy wine and milk
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				without money and without price.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055002">
			</marker>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				<crossref let="f" cid="c23055002.1">
				</crossref>
				Why do you spend your money for that which is not bread,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and your labor for that which does not satisfy?
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				Listen diligently to me, and eat what is good,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and delight yourselves in rich food.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055003">
			</marker>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				Incline your ear, and come to me;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="g" cid="c23055003.1">
				</crossref>
				hear, that your soul may live;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="h" cid="c23055003.2">
				</crossref>
				and I will make with you an everlasting covenant,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="i" cid="c23055003.3">
				</crossref>
				my steadfast, sure love for 
				<crossref let="j" cid="c23055003.4">
				</crossref>
				David.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				<crossref let="k" cid="c23055004.1">
				</crossref>
				Behold, I made him a witness to the peoples,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="l" cid="c23055004.2">
				</crossref>
				a leader and commander for the peoples.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				<crossref let="k" cid="c23055005.1">
				</crossref>
				Behold, you shall call a nation that you do not know,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="m" cid="c23055005.2">
				</crossref>
				a nation that did not know you shall run to you,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				because of the 
				<span class="divine-name">
					Lord
				</span>
				 your God, and of the Holy One of Israel,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="n" cid="c23055005.3">
				</crossref>
				for he has glorified you.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23055006">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				<crossref let="o" cid="c23055006.1">
				</crossref>
				<q class="continue-double" qid="" from="" to="">
				</q>
				Seek the 
				<span class="divine-name">
					Lord
				</span>
				 while he may be found;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				call upon him while he is near;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				let the wicked forsake his way,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the unrighteous man his thoughts;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				let him return to the 
				<span class="divine-name">
					Lord
				</span>
				, that he may have compassion on him,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and to our God, for he will abundantly pardon.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055008">
			</marker>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				For my thoughts are not your thoughts,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				neither are your ways my ways, declares the 
				<span class="divine-name">
					Lord
				</span>
				.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055009">
			</marker>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				<crossref let="p" cid="c23055009.1">
				</crossref>
				For as the heavens are higher than the earth,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				so are my ways higher than your ways
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and my thoughts than your thoughts.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23055010">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				<crossref let="q" cid="c23055010.1">
				</crossref>
				<q class="continue-double" qid="" from="" to="">
				</q>
				For as the rain and the snow come down from heaven
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and do not return there but water the earth,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				making it bring forth and sprout,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="r" cid="c23055010.2">
				</crossref>
				giving seed to the sower and bread to the eater,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				so shall my word be that goes out from my mouth;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				it shall not return to me empty,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				but 
				<crossref let="s" cid="c23055011.1">
				</crossref>
				it shall accomplish that which I purpose,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and shall succeed in the thing for which I sent it.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23055012">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				<crossref let="t" cid="c23055012.1">
				</crossref>
				<q class="continue-double" qid="" from="" to="">
				</q>
				For you shall go out in joy
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and be led forth in peace;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="u" cid="c23055012.2">
				</crossref>
				the mountains and the hills before you
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				shall break forth into singing,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and all the trees of the field shall clap their hands.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23055013">
			</marker>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				<crossref let="v" cid="c23055013.1">
				</crossref>
				Instead of the thorn shall come up the cypress;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				instead of the brier shall come up the myrtle;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				and it shall make a name for the 
				<span class="divine-name">
					Lord
				</span>
				,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				an everlasting sign that shall not be cut off.
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
