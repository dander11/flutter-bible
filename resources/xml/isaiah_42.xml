			<verse num="1">
				<begin-line
					>
				</begin-line>
				<crossref let="e" cid="c23042001.1">
				</crossref>
				Behold 
				<crossref let="f" cid="c23042001.2">
				</crossref>
				my servant, whom I uphold,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
