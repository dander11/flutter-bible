<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Isaiah" num="22">
		<marker class="begin-verse" mid="v23034001">
		</marker>
		<chapter num="34">
			<heading
				>
				Judgment on the Nations
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				Draw near, 
				<crossref let="v" cid="c23034001.1">
				</crossref>
				O nations, to hear,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and give attention, O peoples!
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				Let the earth hear, and all that fills it;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the world, and all that comes from it.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034002">
			</marker>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				For the 
				<span class="divine-name">
					Lord
				</span>
				 is enraged against all the nations,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and furious against all their host;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				he has 
				<crossref let="w" cid="c23034002.1">
				</crossref>
				devoted them to destruction,
				<note nid="n23034002.1">
				</note>
				 has given them over for slaughter.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034003">
			</marker>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				Their slain shall be cast out,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="x" cid="c23034003.1">
				</crossref>
				the stench of their corpses shall rise;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="y" cid="c23034003.2">
				</crossref>
				the mountains shall flow with their blood.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				<crossref let="z" cid="c23034004.1">
				</crossref>
				All the host of heaven shall rot away,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the skies roll up like a scroll.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				All their host shall fall,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				as leaves fall from the vine,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				like leaves falling from the fig tree.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23034005">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				For my sword has drunk its fill in the heavens;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				behold, it descends for judgment upon 
				<crossref let="a" cid="c23034005.1">
				</crossref>
				Edom,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				upon the people 
				<crossref let="b" cid="c23034005.2">
				</crossref>
				I have devoted to destruction.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034006">
			</marker>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				The 
				<span class="divine-name">
					Lord
				</span>
				 has a sword; it is sated with blood;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				it is gorged with fat,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				with the blood of lambs and goats,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				with the fat of the kidneys of rams.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="c" cid="c23034006.1">
				</crossref>
				For the 
				<span class="divine-name">
					Lord
				</span>
				 has a sacrifice in Bozrah,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				a great slaughter in the land of Edom.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				<crossref let="d" cid="c23034007.1">
				</crossref>
				Wild oxen shall 
				<crossref let="e" cid="c23034007.2">
				</crossref>
				fall with them,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="f" cid="c23034007.3">
				</crossref>
				young steers with 
				<crossref let="f" cid="c23034007.4">
				</crossref>
				the mighty bulls.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				Their land shall drink its fill of blood,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and their soil shall be gorged with fat.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23034008">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				<crossref let="g" cid="c23034008.1">
				</crossref>
				For the 
				<span class="divine-name">
					Lord
				</span>
				 has a day of vengeance,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				a year of recompense for the cause of Zion.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034009">
			</marker>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				<crossref let="h" cid="c23034009.1">
				</crossref>
				And the streams of Edom
				<note nid="n23034009.1">
				</note>
				 shall be turned into pitch,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and her soil into sulfur;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				her land shall become burning pitch.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034010">
			</marker>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				Night and day 
				<crossref let="i" cid="c23034010.1">
				</crossref>
				it shall not be quenched;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="j" cid="c23034010.2">
				</crossref>
				its smoke shall go up forever.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="k" cid="c23034010.3">
				</crossref>
				From generation to generation it shall lie waste;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				none shall pass through it forever and ever.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				<crossref let="l" cid="c23034011.1">
				</crossref>
				But the hawk and the porcupine
				<note nid="n23034011.1">
				</note>
				 shall possess it,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the owl and the raven shall dwell in it.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="m" cid="c23034011.2">
				</crossref>
				He shall stretch the line of 
				<crossref let="n" cid="c23034011.3">
				</crossref>
				confusion
				<note nid="n23034011.2">
				</note>
				 over it,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and the plumb line of emptiness.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034012">
			</marker>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				Its noblesùthere is no one there to call it a kingdom,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and all its princes shall be nothing.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23034013">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				<crossref let="o" cid="c23034013.1">
				</crossref>
				Thorns shall grow over its strongholds,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				nettles and thistles in its fortresses.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				It shall be the haunt of 
				<crossref let="p" cid="c23034013.2">
				</crossref>
				jackals,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				an abode for ostriches.
				<note nid="n23034013.1">
				</note>
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034014">
			</marker>
			<verse num="14">
				<begin-line
					>
				</begin-line>
				<crossref let="q" cid="c23034014.1">
				</crossref>
				And wild animals shall meet with hyenas;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the wild goat shall cry to his fellow;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				indeed, there the night bird
				<note nid="n23034014.1">
				</note>
				 settles
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and finds for herself a resting place.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23034015">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="15">
				<begin-line
					>
				</begin-line>
				There the owl nests and lays
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and hatches and gathers her young in her shadow;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				indeed, there 
				<crossref let="r" cid="c23034015.1">
				</crossref>
				the hawks are gathered,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				each one with her mate.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034016">
			</marker>
			<verse num="16">
				<begin-line
					>
				</begin-line>
				Seek and read from the book of the 
				<span class="divine-name">
					Lord
				</span>
				:
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				Not one of these shall be missing;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				none shall be without her mate.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				For the mouth of the 
				<span class="divine-name">
					Lord
				</span>
				 has commanded,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and his Spirit has gathered them.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23034017">
			</marker>
			<verse num="17">
				<begin-line
					>
				</begin-line>
				<crossref let="s" cid="c23034017.1">
				</crossref>
				He has cast the lot for them;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				his hand has portioned it out to them with the line;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				they shall possess it forever;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				from generation to generation they shall dwell in it.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
