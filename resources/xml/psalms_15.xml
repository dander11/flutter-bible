<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Psalms" num="18">
		<marker class="begin-verse" mid="v19015001">
		</marker>
		<chapter num="15">
			<heading
				>
				Who Shall Dwell on Your Holy Hill?
			</heading>
			<subheading class="psalm-title">
				A Psalm of David.
			</subheading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				O 
				<span class="divine-name">
					Lord
				</span>
				, 
				<crossref let="u" cid="c19015001.1">
				</crossref>
				who shall sojourn in your 
				<crossref let="v" cid="c19015001.2">
				</crossref>
				tent?
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				Who shall dwell on your 
				<crossref let="w" cid="c19015001.3">
				</crossref>
				holy hill?
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v19015002">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				He who 
				<crossref let="x" cid="c19015002.1">
				</crossref>
				walks blamelessly and 
				<crossref let="y" cid="c19015002.2">
				</crossref>
				does what is right
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="z" cid="c19015002.3">
				</crossref>
				speaks truth in his heart;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19015003">
			</marker>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				who 
				<crossref let="a" cid="c19015003.1">
				</crossref>
				does not slander with his tongue
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and does no evil to his neighbor,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				nor 
				<crossref let="b" cid="c19015003.2">
				</crossref>
				takes up a reproach against his friend;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19015004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				<crossref let="c" cid="c19015004.1">
				</crossref>
				in whose eyes a vile person is despised,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				but who honors those who fear the 
				<span class="divine-name">
					Lord
				</span>
				;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				who 
				<crossref let="d" cid="c19015004.2">
				</crossref>
				swears to his own hurt and does not change;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v19015005">
			</marker>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				who 
				<crossref let="e" cid="c19015005.1">
				</crossref>
				does not put out his money at interest
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and 
				<crossref let="f" cid="c19015005.2">
				</crossref>
				does not take a bribe against the innocent.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				He who does these things shall never be 
				<crossref let="g" cid="c19015005.3">
				</crossref>
				moved.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
</crossway-bible>


