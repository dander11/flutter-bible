				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23040025">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="25">
				<begin-line
					>
				</begin-line>
				<crossref let="f" cid="c23040025.1">
				</crossref>
