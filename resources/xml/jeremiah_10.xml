				<q class="end-double" qid="" from="" to="">
				</q>
				<note nid="n24010011.1">
				</note>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v24010012">
			</marker>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				<crossref let="y" cid="c24010012.1">
				</crossref>
				It is he who 
				<crossref let="z" cid="c24010012.2">
