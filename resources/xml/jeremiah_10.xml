				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v24010009">
			</marker>
			<verse num="9">
				<begin-line
					>
				</begin-line>
				<crossref let="q" cid="c24010009.1">
				</crossref>
