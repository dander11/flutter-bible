<?xml version="1.0" encoding="utf-8"?> 
<crossway-bible>
	<book title="Isaiah" num="22">
		<marker class="begin-verse" mid="v23046001">
		</marker>
		<chapter num="46">
			<heading
				>
				The Idols of Babylon and the One True God
			</heading>
			<begin-block-indent
				>
			</begin-block-indent>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="1">
				<begin-line
					>
				</begin-line>
				<crossref let="o" cid="c23046001.1">
				</crossref>
				Bel bows down; Nebo stoops;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				their idols are on beasts and livestock;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				these things you carry are borne
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				as burdens on weary beasts.
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046002">
			</marker>
			<verse num="2">
				<begin-line
					>
				</begin-line>
				They stoop; they bow down together;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				they cannot save the burden,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				but 
				<crossref let="p" cid="c23046002.1">
				</crossref>
				themselves go into captivity.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23046003">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="3">
				<begin-line
					>
				</begin-line>
				<q class="begin-double" qid="" from="" to="">
				</q>
				Listen to me, O house of Jacob,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				all the remnant of the house of Israel,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="q" cid="c23046003.1">
				</crossref>
				who have been borne by me from before your birth,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				carried from the womb;
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046004">
			</marker>
			<verse num="4">
				<begin-line
					>
				</begin-line>
				<crossref let="r" cid="c23046004.1">
				</crossref>
				even to your old age I am he,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and to gray hairs I will carry you.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				I have made, and I will bear;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				I will carry and will save.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23046005">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="5">
				<begin-line
					>
				</begin-line>
				<crossref let="s" cid="c23046005.1">
				</crossref>
				<q class="continue-double" qid="" from="" to="">
				</q>
				To whom will you liken me and make me equal,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and compare me, that we may be alike?
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046006">
			</marker>
			<verse num="6">
				<begin-line
					>
				</begin-line>
				<crossref let="t" cid="c23046006.1">
				</crossref>
				Those who lavish gold from the purse,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and weigh out silver in the scales,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				hire a goldsmith, and he makes it into a god;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="u" cid="c23046006.2">
				</crossref>
				then they fall down and worship!
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046007">
			</marker>
			<verse num="7">
				<begin-line
					>
				</begin-line>
				<crossref let="v" cid="c23046007.1">
				</crossref>
				They lift it to their shoulders, they carry it,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				they set it in its place, and it stands there;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				<crossref let="w" cid="c23046007.2">
				</crossref>
				it cannot move from its place.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				If one cries to it, it does not answer
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				or save him from his trouble.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23046008">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="8">
				<begin-line
					>
				</begin-line>
				<q class="continue-double" qid="" from="" to="">
				</q>
				Remember this and stand firm,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				recall it to mind, 
				<crossref let="x" cid="c23046008.1">
				</crossref>
				you transgressors,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046009">
			</marker>
			<verse num="9">
				<begin-line class="indent">
				</begin-line>
				remember the former things of old;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				for I am God, and there is no other;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				I am God, and there is none like me,
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046010">
			</marker>
			<verse num="10">
				<begin-line
					>
				</begin-line>
				<crossref let="y" cid="c23046010.1">
				</crossref>
				declaring the end from the beginning
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and from ancient times things not yet done,
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				saying, 
				<crossref let="z" cid="c23046010.2">
				</crossref>
				<q class="begin-single" qid="" from="" to="">
				</q>
				My counsel shall stand,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and I will accomplish all my purpose,
				<q class="end-single" qid="" from="" to="">
				</q>
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046011">
			</marker>
			<verse num="11">
				<begin-line
					>
				</begin-line>
				<crossref let="a" cid="c23046011.1">
				</crossref>
				calling a bird of prey from the east,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				the man of my counsel from a far country.
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="b" cid="c23046011.2">
				</crossref>
				I have spoken, and I will bring it to pass;
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				I have purposed, and I will do it.
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<marker class="begin-verse" mid="v23046012">
			</marker>
			<begin-paragraph class="line-group">
			</begin-paragraph>
			<verse num="12">
				<begin-line
					>
				</begin-line>
				<q class="continue-double" qid="" from="" to="">
				</q>
				Listen to me, you stubborn of heart,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				you who are far from righteousness:
				<end-line class="br">
				</end-line>
			</verse>
			<marker class="begin-verse" mid="v23046013">
			</marker>
			<verse num="13">
				<begin-line
					>
				</begin-line>
				<crossref let="c" cid="c23046013.1">
				</crossref>
				I bring near my righteousness; it is not far off,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				and my salvation will not delay;
				<end-line class="br">
				</end-line>
				<begin-line
					>
				</begin-line>
				<crossref let="d" cid="c23046013.2">
				</crossref>
				I will put salvation in Zion,
				<end-line class="br">
				</end-line>
				<begin-line class="indent">
				</begin-line>
				for Israel my glory.
				<q class="end-double" qid="" from="" to="">
				</q>
				<end-line
					>
				</end-line>
			</verse>
			<end-paragraph
				>
			</end-paragraph>
			<end-block-indent
				>
			</end-block-indent>
		</chapter>
	</book>
